<GridLayout rows="*" orientation="horizontal" columns="*" width="100%" height="60" class="action-bar" loaded="onLoaded">
    <Label row="0" col="0" text="{{ actionBarTitle }}" id="textTitle" textWrap="true" color="white" class="text-center" fontSize="20" verticalAlignment="center" 
    loaded="onTitleCreatingView"></Label>
    <StackLayout  row="0" col="0" tap="{{ goBack }}" width="15%" horizontalAlignment="left" height="50" verticalAlignment="center">
        <Label text="&#xf104;" style="font-size: 35" class="fa" color="white" horizontalAlignment="left"   ></Label>
    </StackLayout>
</GridLayout>