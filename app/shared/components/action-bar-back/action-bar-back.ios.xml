    <Placeholder row="0" col="0" colSpan="2" text="{{ actionBarTitle }}" id="textTitle" textWrap="true" color="white" class="text-center" fontSize="18"
    creatingView="onTitleCreatingView"></Placeholder>
    <!-- <Label row="0" col="0" colSpan="2" text="{{ actionBarTitle }}" textWrap="true" color="white" class="text-center" fontSize="18"></Label> -->
    
    <StackLayout row="0" col="0" tap="{{ goBack }}" padding="0 15 0 10" horizontalAlignment="left" height="50"  >
        <Label text="&#xf104;" style="font-size: 35" class="fa" color="white" horizontalAlignment="left" />
    </StackLayout>
</GridLayout>